<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.openweather.airnews.Fragment.TaiwanFragment">

    <RelativeLayout
        android:id="@+id/mapRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <com.andy6804tw.zoomimageviewlibrary.ZoomImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TableRow
            android:id="@+id/tableAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView">

            <TextView
                android:id="@+id/tvtvStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全台"
                android:textColor="@color/tvStatus1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvtvStatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地區"
                android:textColor="@color/tvStatus2" />
        </TableRow>

    </RelativeLayout>

</FrameLayout>
